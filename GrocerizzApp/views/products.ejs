<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Declare character encoding and viewport settings -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Link to Bootstrap CSS and JS for styling and functionality -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Set the title of the web page -->
    <title>Grocerizz App</title>
</head>
<body>
    <!-- Navigation bar with Bootstrap classes for styling -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <!-- Brand name that links to the homepage -->
            <a class="navbar-brand" href="/">Grocerizz App</a>
            <!-- Button for collapsing navbar on smaller screens -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Collapsible content -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <!-- Navigation link to add a new product -->
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Add new product</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Main container for page content -->
    <div class="container">
        <!-- Line breaks for spacing -->
        <br>
        <!-- Centered heading for the product details section -->
        <div class="text-center"><h2>Product Details</h2></div>
        <br>
        <!-- Form for updating product details -->
        <form action="/updateProduct/<%= products.productID %>" method="POST" enctype="multipart/form-data">
          <!-- Input field for product name -->
          <div>
              <label for="productName">Product Name:</label>
              <input type="text" id="productName" name="productName" value="<%= products.productName %>" required>
          </div>
          <!-- Input field for stock quantity -->
          <div>
              <label for="stock">Stock:</label>
              <input type="number" id="stock" name="stock" value="<%= products.stock %>" required>
          </div>
          <!-- Input field for product price -->
          <div>
              <label for="price">Price:</label>
              <input type="number" id="price" name="price" step="0.01" value="<%= products.price.toFixed(2) %>" required>
          </div>
          <!-- Textarea for product description -->
          <div>
              <label for="description">Description:</label>
              <textarea id="description" name="description" rows="4"><%= products.description %></textarea>
          </div>
          <!-- Display current product image -->
          <div>
              <label for="currentImage">Current Image:</label>
              <img src="<%= products.image %>" width="100" alt="Current Image">
          </div>
          <!-- Input field for uploading a new image -->
          <div>
              <label for="newImage">New Image:</label>
              <input type="file" id="newImage" name="newImage">
          </div>
          <!-- Submit button for the form -->
          <button type="submit">Edit Product</button>
      </form>
</html>



